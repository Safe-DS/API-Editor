{
    "name": "api-editor-client",
    "version": "0.0.0",
    "private": true,
    "homepage": "https://lars-reimann.github.io/api-editor",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "serve": "vite preview",
        "test": "jest src",
        "eslint": "eslint .",
        "stylelint": "stylelint \"**/*.css\"",
        "lint": "pnpm run eslint && pnpm run stylelint",
        "fix": "eslint --fix . && stylelint --fix \"**/*.css\" && prettier --write .",
        "deploy": "pnpm run build && gh-pages -d dist",
        "prepare": "cd .. && husky install client/.husky",
        "gen:theme-typings": "chakra-cli tokens src/theme/index.ts",
        "postinstall": "pnpm run gen:theme-typings"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "eslint --fix .",
        "*.css": "stylelint --fix \"**/*.css\"",
        "*.{html,md,css,js,jsx,ts,tsx,json,yaml,yml}": "prettier --write ."
    },
    "dependencies": {
        "@chakra-ui/react": "^1.6.5",
        "@chakra-ui/styled-system": "^1.12.1",
        "@chakra-ui/theme-tools": "^1.1.8",
        "@emotion/react": "^11",
        "@emotion/styled": "^11",
        "@reduxjs/toolkit": "^1.6.1",
        "classnames": "^2.3.1",
        "framer-motion": "^4",
        "idb-keyval": "^5.0.6",
        "katex": "^0.13.11",
        "mdast-util-to-hast-backport": "^10.2.2",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-dropzone": "^11.3.4",
        "react-hook-form": "^7.12.0",
        "react-icons": "^4.2.0",
        "react-markdown": "^6.0.2",
        "react-redux": "^7.2.4",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "react-syntax-highlighter": "^15.4.3",
        "react-window": "^1.8.6",
        "rehype-katex": "^5.0.0",
        "remark-gfm": "^1.0.0",
        "remark-math": "^4.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-0",
        "@chakra-ui/cli": "^1.5.0",
        "@hookform/devtools": "^3.1.0",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@types/jest": "^26.0.24",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-router-dom": "^5.1.8",
        "@types/react-syntax-highlighter": "^13.5.2",
        "@types/react-window": "^1.8.4",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.0.0",
        "@typescript-eslint/parser": "^4.0.0",
        "@vitejs/plugin-react-refresh": "^1.3.1",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-plugin-flowtype": "^5.8.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^24.3.7",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-testing-library": "^3.9.0",
        "gh-pages": "^3.2.3",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "lint-staged": "^11.0.1",
        "prettier": "^2.3.2",
        "stylelint": "^13.13.1",
        "stylelint-config-idiomatic-order": "^8.1.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-order": "^4.1.0",
        "ts-jest": "^27.0.4",
        "typescript": "^4.3.2",
        "vite": "^2.4.3"
    }
}
